{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build/**/*",
    "node_modules",
    "test/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "noEmit": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "removeComments": false,
    "skipLibCheck": true,
    "declarationMap": true
  }
}
